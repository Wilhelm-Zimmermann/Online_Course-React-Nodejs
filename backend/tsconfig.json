{
  "compilerOptions": {
    "target": "ES5",                         
    "experimentalDecorators": true,       
    "emitDecoratorMetadata": true,        
    "module": "commonjs",         
    "lib": ["ES2015"],           
    // "rootDir": "./",                      
    // "baseUrl": "./src",                      
    "outDir": "./dist",                       
    "resolveJsonModule": true,            
    "declaration": true,                  
    "emitDeclarationOnly": true,          
    "isolatedModules": true,              
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true  ,                   
    "typeRoots": [
      "./src/@types"
    ]
